                            <option value="roof-replacement">Roof Replacement</option>
                            <option value="solar-roofing">Solar Roofing Installation</option>
                            <option value="kitchen-remodel">Kitchen Remodeling</option>
                            <option value="bathroom-remodel">Bathroom Remodeling</option>
                            <option value="home-addition">Home Addition</option>
                            <option value="new-construction">New Construction</option>
                            <option value="other">Other</option>
                        </select>
                    </div>
                    
                    <div class="form-group">
                        <label for="timeframe">Project Timeframe</label>
                        <select id="timeframe" name="timeframe">
